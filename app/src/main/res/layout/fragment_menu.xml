<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:gl="http://schemas.android.com/apk/res-auto"
        tools:context=".MenuFragment"
        android:background="@drawable/foto_pelu_editada"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tÃ­tulo"
            android:textSize="45dp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:paddingTop="75dp"
            />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="150dp">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="horizontal"
                   android:gravity="center"
                   android:paddingBottom="10dp">

                   <androidx.cardview.widget.CardView
                       android:id="@+id/button_pedir_cita"
                       android:layout_width="150dp"
                       android:layout_height="150dp"
                       android:layout_marginEnd="15dp"
                       app:cardCornerRadius="15dp"
                       app:cardPreventCornerOverlap="true"
                       android:backgroundTint="@color/cardview_shadow_start_color"
                       android:foreground="?android:attr/selectableItemBackground"
                       android:clickable="true"
                       android:focusable="true">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:background="@drawable/colorfondo"
                           android:orientation="vertical">

                           <ImageView
                               android:layout_width="75dp"
                               android:layout_height="85dp"
                               android:src="@drawable/cita"
                               android:layout_gravity="center"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:gravity="center"
                               android:text="@string/button_pedir_cita"
                               android:textSize="16sp"
                               android:textColor="@color/white"
                               android:padding="16dp"/>

                       </LinearLayout>

                   </androidx.cardview.widget.CardView>



                   <androidx.cardview.widget.CardView
                       android:id="@+id/button_consult_date"
                       android:layout_width="150dp"
                       android:layout_height="150dp"
                       app:cardCornerRadius="15dp"
                       android:layout_marginStart="15dp"
                       app:cardPreventCornerOverlap="true"
                       android:backgroundTint="@color/cardview_shadow_start_color"
                       android:foreground="?android:attr/selectableItemBackground"
                       android:clickable="true"
                       android:focusable="true">

                       <LinearLayout
                           android:layout_width="match_parent"
                           android:layout_height="match_parent"
                           android:orientation="vertical"
                           android:background="@drawable/colorfondo">

                           <ImageView
                               android:layout_width="75dp"
                               android:layout_height="85dp"
                               android:src="@drawable/c_cita"
                               android:layout_gravity="center"/>
                           <TextView
                               android:layout_width="match_parent"
                               android:layout_height="match_parent"
                               android:gravity="center"
                               android:text="@string/button_consultar_citas"
                               android:textSize="15sp"
                               android:textColor="@color/white"
                               android:padding="16dp"/>
                       </LinearLayout>

                   </androidx.cardview.widget.CardView>
               </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:paddingTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/button_expositor_articulos"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="15dp"
                        app:cardCornerRadius="15dp"
                        app:cardPreventCornerOverlap="true"
                        android:backgroundTint="@color/cardview_shadow_start_color"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/colorfondo"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="85dp"
                                android:src="@drawable/bag"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/button_gestionarExpo"
                                android:textSize="16sp"
                                android:textColor="@color/white"
                                android:padding="16dp"/>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/button_gestionar_info"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="15dp"
                        android:layout_marginStart="15dp"
                        app:cardPreventCornerOverlap="true"
                        android:backgroundTint="@color/cardview_shadow_start_color"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/colorfondo">

                            <ImageView
                                android:layout_width="75dp"
                                android:layout_height="85dp"
                                android:src="@drawable/hirdresser_icon"
                                android:layout_gravity="center"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/button_gestionarInfo"
                                android:textSize="15sp"
                                android:textColor="@color/white"
                                android:padding="16dp"/>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

</ScrollView>